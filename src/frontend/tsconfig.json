{
    "compilerOptions": {
      "jsx": "react",
      "experimentalDecorators": true,
      "target": "ES2020",
      "module": "commonjs",
      "lib": ["ES2020", "DOM"],
      "allowJs": true,
      "sourceMap": true,
      "strict": true,
      "moduleResolution": "node",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "resolveJsonModule": true,
      "forceConsistentCasingInFileNames": true,
    },
    "include": ["src/**/*"],
}
